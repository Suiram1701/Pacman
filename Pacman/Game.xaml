<Window x:Class="Pacman.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pacman"
        xmlns:Figures="clr-namespace:Pacman.Figures"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Pacman" Height="864" Width="658" ResizeMode="NoResize"
        KeyUp="Window_KeyUp">
    <Grid>
        <Image Source="/Style/Textures/Map.png" Panel.ZIndex="0"/>
        <Canvas x:Name="Canvas" Panel.ZIndex="1">
            <Figures:Pacman x:Name="Pacman" Canvas.Left="302" Canvas.Top="588" Direction="Down"/>
        </Canvas>
    </Grid>
</Window>
